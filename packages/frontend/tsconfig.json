{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "ES2019",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./__tests__/**/*.spec.ts",
    "./serve-hotReload.js",
    "./webpack.config.js",
    "./jest.config.js",
    ".eslintrc.js",
    "./babel.config.js",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "./tests/**/*.ts",
    "./tests/**/*.tsx"
  ],
  "exclude": [
    ".env"
  ]
}
