{
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "../../node_modules/adonis-preset-ts/tsconfig",
  "compilerOptions": {
    "outDir": "../../build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "packages/backend/app/*"
      ],
      "Config/*": [
        "packages/backend/config/*"
      ],
      "Contracts/*": [
        "packages/backend/contracts/*"
      ],
      "Database/*": [
        "packages/backend/database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/lucid",
      "@adonisjs/shield",
      "@adonisjs/repl",
      "@adonisjs/auth"
    ]
  }
}
